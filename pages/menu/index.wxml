<!-- 分层购物车 -->
<block wx:if="{{menuData.foodIds.length>0}}">
  <cart-group
    menu-data="{{ menuData }}"
    bindselectgoods="onGoodsSelect"
    bindselectstore="onStoreSelect"
    bindchangequantity="onQuantityChange"
    bindgocollect="goCollect"
    bindfoodclick="goFoodDetail"
    bindclearinvalidgoods="clearInvalidGoods"
    binddelete="onFoodDelete"
  />

  <view class="gap" />
  <!-- 商品小计以及结算按钮 -->
  <cart-bar
    total-price="{{totalPrice}}"
    total-foods-num="{{totalFoodsNum}}"
    fixed="{{true}}"
    bottomHeight="{{112}}"
    bindhandleToSettle="onToSettle"
  />
</block>
<!-- 购物车空态 -->
<cart-empty wx:else bind:handleClick="onGotoHome" />
<t-toast id="t-toast" />
<t-dialog id="t-dialog" />
