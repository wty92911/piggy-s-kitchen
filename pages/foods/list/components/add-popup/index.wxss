/* Popup styles */
.popup-content {
    width: 80%;
    left: 10%;
    top: 15px;
    background-color: #1e1e1e;
    border-radius: 10px;
    overflow: hidden;
    color: #fff;
    position: absolute;
    height: 1200rpx;
}

.popup{
    background-color: gray;
}
.popup-header {
    padding: 20px;
    background-color: #0d57a8;
    color: #fff;
    text-align: center;
    font-size: 18px;
    font-weight: bold;
}

.image-container {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 10rpx;
    margin-top: 10px;
    width: 90%;
}
.image-wrap {
    width: 30%; /* 根据需要调整宽度 */
}
.image-preview {
    width: 90%;
    height: 150rpx;
    margin-top: 10px;
}
.popup-body {
    flex: 1;  /* 占据剩余空间 */
    padding: 20px;
    background: white;
    overflow-y: auto;
    width: 100%;
    height: 70%;
    bottom: 200rpx;
}

.popup-input {
    margin-bottom: 10px;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 5px;
    color: black;
    width: 77%;
}

.upload-button {
    width: 88%;
    margin-bottom: 10px;
    padding: 10px;
    color: #fff;
    border-radius: 5px;
    text-align: center;
    height: 60px;
}

.popup-footer {
    padding: 10px;
    display: flex;
    background: white;
    justify-content: space-between;
    position: sticky; /* 固定在底部 */
    bottom: 0%;
    top: 80%;
}

.confirm-popup-button {
    flex: 1;
    margin: 0 10px;
    padding: 10px;
    border: none;
    border-radius: 5px;
    background-color: #007aff;
    color: #fff;
    font-weight: bold;
    text-align: center;
}

.cancel-popup-button {
    flex: 1;
    margin: 0 10px;
    padding: 10px;
    border: 1px solid #007aff;
    border-radius: 5px;
    background-color: white;
    color: black;
    font-weight: bold;
    text-align: center;
}